extends layout

block content
  div(id='wrapper')

    div(id='main')
      div(class='inner')

        header(id='header')
          h1= title       

        section(id='banner')
          div(class='content')
            header
            table
              tr
                th Identifiant
                th Nom
                th PrÃ©nom
                th Email
                th Actions
              tr
                each figurant, i in figurantlist
                  tr
                    td
                      = figurant.identifiant
                    td
                      = figurant.nom
                    td
                      = figurant.prenom
                    td
                      = figurant.email
                    td
