extends layout

block content
  div(id='wrapper')

    div(id='main')
      div(class='inner')

        header(id='header')
          h1= title       

        section(id='banner')
          div(class='content')
            header

            p= 'Listes des rôles'
              
            form(id="addRole", name="addRole",method="post",action="/role/add")
              input(id="name", type="text", placeholder="Nom", name="name")
              
              button#btnSubmit(type="submit") Ajouter rôle

            table
              tr
                th Nom
              tr
                each role, i in rolelist
                  tr
                    td
                      = role.nom

    div(id='sidebar')
      div(class='inner')

        nav(id='menu')
          header(class='major')
            h2= 'Menu'

          ul
            li
              a(href='/') Accueil
            li
              a(href='/figurants') Liste des figurants
            li
              a(href='/role') Liste des roles
            li
              a(href='/evenements') Liste des evenements
            li
              a(href='/insertEvenement') Insertion d'un evenement
       
        footer(id='footer')
          p(class='copyright')= 'BTS SIO SLAM.'
    