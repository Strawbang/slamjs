extends layout

block content
  div(id='wrapper')

    div(id='main')
      div(class='inner')

        header(id='header')
          h1= title       

        section(id='banner')
          div(class='content')
            header
              p= 'Listes des événements'
              table
                tr
                  td Nom
                  td Type
                  td Date
                  td Nombre jours
                  
                each evenement, i in evenementlist
                  tr
                    td/a(href='/evenements/'+evenement._id)
                      = evenement.nom
                    td
                      = evenement.type
                    td
                      = evenement.date                    
                    td
                      = evenement.nombreJours

    div(id='sidebar')
      div(class='inner')

        nav(id='menu')
          header(class='major')
            h2= 'Menu'

          ul
            li
              a(href='/') Accueil
            li
              a(href='/figurants') Liste des figurants
            li
              a(href='/role') Liste des roles
            li
              a(href='/evenements') Liste des evenements
            li
              a(href='/insertEvenement') Insertion d'un evenement
       
        footer(id='footer')
          p(class='copyright')= 'BTS SIO SLAM.'
    